@model ChooseYourAddressViewModel
@{
    ViewData["Title"] = "Choose your address";
}
@section BackLink {
    <a asp-route="@RouteNames.FindYourAddressPage" class="govuk-back-link">Back</a>
}

<form asp-route="@RouteNames.ChooseYourAddressPage">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <fieldset class="govuk-fieldset">

                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">

                    <h1 class="govuk-fieldset__heading">
                        Choose your address
                    </h1>

                </legend>

                <p class="govuk-hint">We found the several addresses for the post code @Model.PostCode.</p>

                <div class="govuk-form-group">
                    <label class="govuk-label" for="address">
                        Address
                    </label>
                    <select asp-for="UPRN" asp-items="@Model.AddressList" class="govuk-select"></select>
                </div>



            </fieldset>

        </div>
    </div>
    <div class="govuk-grid-row govuk-!-margin-bottom-4 ">
        <div class="govuk-grid-column-two-thirds">
            <a asp-route="@RouteNames.WhatIsYourAddressPage" class="govuk-link govuk-link--no-visited-state">My address isn't listed</a>
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        </div>
    </div>
</form>